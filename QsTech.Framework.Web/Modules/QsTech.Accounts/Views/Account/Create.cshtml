@model QsTech.Accounts.Models.Accounts.CreateAccountModel
@{
    this.ChannelId = "Management";
    ViewBag.Title = "新建账户";
}
<div class="rightCont">
    <div class="mt10">
        @using (Html.BeginForm("Create", "Account"))
        {
            <table style="width:100%; line-height:24px" class="data-detail">
                <tr>
                    <td style="text-align: right;width:88px;">
                        <i class="required">*</i>登录账号：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.LoginName)
                        @Html.ValidationMessageFor(model => model.LoginName)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        <i class="required">*</i>登录密码：
                    </td>
                    <td>
                        @Html.PasswordFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        <i class="required">*</i>确认密码：
                    </td>
                    <td>
                        @Html.PasswordFor(model => model.ConfirmPassword)
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        <i class="required"></i>姓名：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        年龄：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Age)
                        @Html.ValidationMessageFor(model => model.Age)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        工号：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.JobNumber)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        性别：
                    </td>
                    <td>
                        @Html.RadioButtonFor(model => model.Gender, "男", new { id = "Gender_0", @class = "radio" })
                        <label for="Gender_0">男</label>
                        @Html.RadioButtonFor(model => model.Gender, "女", new { id = "Gender_1", @class = "radio" })
                        <label for="Gender_1">女</label>
                        @Html.ValidationMessageFor(model => model.Gender)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        生日：
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Birthday, "DateTextBox")
                        @Html.ValidationMessageFor(model => model.Birthday)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        固定电话：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Telephone)
                        @Html.ValidationMessageFor(model => model.Telephone)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        <i class="required"></i>移动电话：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Mobile)
                        @Html.ValidationMessageFor(model => model.Mobile)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right;">
                        <i class="required"></i>电子邮件：
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email)
                    </td>
                </tr>
            </table>
            <div class="mt_10 ml_20">
                <input type="submit" value="保 存" class="btn btn-primary" />
               
               <input type="button" value="账户列表" class="btn" onclick="javascript:window.location='@Url.Action("List")';" />

            </div>
        }
    </div>
</div>
@section AfterBody
{
@ResourceManager.Include("modalShow").Render()
<script type="text/javascript">
    $(function () {
        $("#Birthday").datepicker({ altFormat: 'yy-mm-dd', yearRange:'c-50' });
        

        
    });
</script>
}